@model Category
@*Tạo biến action để cho biết viewbag.action có chuỗi kí tự là gì <edit hay là add>*@
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="categories" asp-action="@action">
    @if(action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="CategoryId" />
    }
    <div class="tet-danger" asp-validation-summary="All"></div> @*Dùng để hiển thị lỗi model ở đầu trang*@
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        @*Dùng để hiển thị lỗi model ở ngay cạnh trường liên quan*@
        <div class="col">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Description" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Description" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </div>
</form>